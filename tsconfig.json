{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "types": ["jest"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "baseurl": "./",
  "include": [
    "src",
    "cypress.d.ts",
    "cypress/integration/FoodGrid.cy.tsx",
    "cypress/integration/CalorieCounterBox.cy.tsx",
    "cypress/integration/NutritionCard.cy.tsx",
    "cypress/integration/Layout.cy.tsx",
    "cypress/integration/ProgressBar.cy.tsx",
    "cypress/integration/SearchBox.cy.tsx"
  ],
  "paths": {
    "@/*": ["src/*"]
  }
}
